<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://pbs.twimg.com/media/DdJPUPTXUAEi1Sa.jpg');">
  <div class="banner-content">
    <h1>Adopte un TA</h1>
    <p>Learn to code with an TA</p>
    <a class="btn btn-lg red-button">Search courses </a>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @courses.each do |course| %>
    <div class="col-xs-12 col-sm-4">
      <%= render partial: 'shared/card', locals: {
        course: course } %>
    </div>
    <% end %>
  </div>
</div>
