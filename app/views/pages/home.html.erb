<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.workuper.com/ressources/apprenez-a-coder-des-applications-et-sites-web-avec-le-wagon');">
  <div class="banner-content">
    <h1>Adopt a TA</h1>
    <p>Learn to code with a TA</p>
    <%= link_to "All courses", courses_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @courses.each do |course| %>
    <div class="col-xs-12 col-sm-4">
      <%= render partial: 'shared/card', locals: {
        course: course } %>
    </div>
    <% end %>
  </div>
</div>
