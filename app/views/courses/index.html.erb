<div class="container">
  <div class="row">
    <% if @courses.length == 0 %>
      <div class="col-xs-12 col-sm-4" id="main-grid">
          <%= render partial: 'shared/cta_card' %>
      </div>
    <% else %>
    <% @courses.each_with_index do |course, index| %>
    <div class="col-xs-12 col-sm-4" id="main-grid">
      <%= render partial: 'shared/card', locals: { course: course } %>
    </div>
      <% if index == [1, @courses.length - 1].min %>
      <div class="col-xs-12 col-sm-4" id="main-grid">
          <%= render partial: 'shared/cta_card' %>
      </div>
      <% end %>
    <% end %>
    <% end %>
  </div>
</div>
